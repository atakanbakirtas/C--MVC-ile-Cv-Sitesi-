@{
    ViewBag.Title = "Skilekle";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

<h2 class="text-center">Yetenek Ekle</h2>
<form class="form-group" method="post">
    <div class="mb-3">
        <input name="UserID" type="text" class="form-control" required="" placeholder="Kullanıcı ID" />
    </div>

    <div class="mb-3">
        <input name="SkillName" type="text" class="form-control" required="" placeholder="Yetenek Adı" />
    </div>

    <div class="mb-3">
        <input name="ProficiencyLevel" type="text" class="form-control" required="" placeholder="Seviye" />
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-info btn-lg" id="btn">Yetenek Ekle</button>
    </div>
</form>

<script>
    $('#btn').click(function () {
        alert('Yetenek başarıyla eklendi');
    });
</script>
