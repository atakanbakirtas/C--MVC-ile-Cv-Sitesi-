
@{
    ViewBag.Title = "edugüncelle";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

@model CvProjesi.tbl_education

<div class="container mt-5">
    <h2 class="text-center mb-4" style="color: #6c5ce7;"> Bilgilerimi Düzenle</h2>

    @using (Html.BeginForm("edugüncelle2", "Admindefault", FormMethod.Post))
    {
        <div class="card shadow-lg p-4" style="border-radius: 10px; background-color: #f0f4f8;">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label" style="color: #0984e3;">User-İD</label>
                    @Html.TextBoxFor(x => x.UserID, new { @class = "form-control border-info", @placeholder = "Kullanıcı ID" })
                </div>
                <div class="col-md-6">
                    <label class="form-label" style="color: #0984e3;">Okul</label>
                    @Html.TextBoxFor(x => x.SchoolName, new { @class = "form-control border-info", @placeholder = "Üniversite adını girin" })
                </div>
            </div>

            <div class="col-md-6">
                <label class="form-label" style="color: #00b894;">Açıklama</label>
                @Html.TextAreaFor(x => x.Description, new { @class = "form-control border-success", @placeholder = "Açıklama girin" })
            </div>

            <div class="mb-3">
                <label class="form-label" style="color: #6c5ce7;">Başlangıç</label>
                @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control border-info", @type = "date", @placeholder = "Başlangıç tarihi girin" })
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label" style="color: #00b894;">Bitiş</label>
                    @Html.TextBoxFor(x => x.EndDateDATE, new { @class = "form-control border-success", @type = "date", @placeholder = "Bitiş Tarihi girin" })
                </div>

                <div class="mb-3">
                    <label class="form-label" style="color: #6c5ce7;">Bölüm</label>
                    @Html.TextBoxFor(x => x.Degree, new { @class = "form-control border-info", rows = 4, @placeholder = "Bölüm girin" })
                </div>
            </div>



            <button type="submit" class="btn btn-lg btn-block mt-3" style="background-color: #6c5ce7; color: white;"> Bilgileri Güncelle</button>
        </div>
    }
</div>

<!-- Bootstrap Script Files -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

