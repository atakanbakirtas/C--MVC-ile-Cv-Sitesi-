
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Girişi</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #c0392b;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: #3c6382;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
            width: 400px;
        }

        .login-title {
            color: #d1ccc0;
            font-size: 32px;
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-login {
            background-color: #00f5d4;
            color: #121212;
            transition: background-color 0.3s;
        }

            .btn-login:hover {
                background-color: #e94560;
            }

        .form-control {
            border: none;
            border-radius: 5px;
            background-color: #2e2e2e;
            color: #fff;
        }

            .form-control:focus {
                background-color: #2e2e2e;
                box-shadow: 0 0 5px #00f5d4;
                color: #fff;
            }
    </style>
</head>
<body>

    <div class="login-container">
        <h2 class="login-title">Admin Girişi</h2>
        @using (Html.BeginForm("AdminGiris", "Admindefault", FormMethod.Post)) {  
            <!-- Login işlemi için uygun action belirt -->
            <div class="form-group">
                <label for="username">Kullanıcı Adı</label>
                <input type="text" id="username" name="admin" class="form-control" required placeholder="Kullanıcı Adı">
            </div>
            <div class="form-group">
                <label for="password">Şifre</label>
                <input type="password" id="password" name="sifre" class="form-control" required placeholder="Şifre">
            </div>
            <button type="submit" class="btn btn-login btn-block">Giriş Yap</button>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
