@{
    ViewBag.Title = "Bilgi Düzenle";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

@model CvProjesi.tbl_user

<div class="container mt-5">
    <h2 class="text-center mb-4" style="color: #6c5ce7;"> Bilgilerimi Düzenle</h2>

    @using (Html.BeginForm("Bilgigüncelle", "Admindefault", FormMethod.Post))
    {
        <div class="card shadow-lg p-4" style="border-radius: 10px; background-color: #f0f4f8;">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="FullName" class="form-label" style="color: #0984e3;">Ad-Soyad</label>
                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control border-info", @placeholder = "Ad ve soyadınızı girin" })
                </div>
                <div class="col-md-6">
                    <label for="Title" class="form-label" style="color: #0984e3;">Bölüm</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control border-info", @placeholder = "Bölüm adını girin" })
                </div>
            </div>

            <div class="mb-3">
                <label for="Biography" class="form-label" style="color: #6c5ce7;">Biografi</label>
                @Html.TextAreaFor(x => x.Biography, new { @class = "form-control border-info", rows = 4, @placeholder = "Kendiniz hakkında kısa bir biyografi yazın" })
            </div>

            <div class="mb-3">
                <label for="ProfileImage" class="form-label" style="color: #6c5ce7;">Profil Resmi</label>
                @Html.TextBoxFor(x => x.ProfileImage, new { @class = "form-control border-info", @placeholder = "Profil resminizin URL'sini girin" })
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="Email" class="form-label" style="color: #00b894;">Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control border-success", @type = "email", @placeholder = "Email adresinizi girin" })
                </div>
                <div class="col-md-6">
                    <label for="PhoneNumber" class="form-label" style="color: #00b894;">Telefon</label>
                    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control border-success", @placeholder = "Telefon numaranızı girin" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="LinkedIn" class="form-label" style="color: #fd79a8;">LinkedIn</label>
                    @Html.TextBoxFor(x => x.LinkedIn, new { @class = "form-control border-danger", @placeholder = "LinkedIn profil URL'nizi girin" })
                </div>
                <div class="col-md-6">
                    <label for="GitHub" class="form-label" style="color: #fd79a8;">GitHub</label>
                    @Html.TextBoxFor(x => x.GitHub, new { @class = "form-control border-danger", @placeholder = "GitHub profil URL'nizi girin" })
                </div>
            </div>

            <button type="submit" class="btn btn-lg btn-block mt-3" style="background-color: #6c5ce7; color: white;"> Bilgileri Güncelle</button>
        </div>
    }
</div>

<!-- Bootstrap Script Files -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
