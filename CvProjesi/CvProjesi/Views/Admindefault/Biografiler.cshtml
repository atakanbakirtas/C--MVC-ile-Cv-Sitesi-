@{
    ViewBag.Title = "Biografiler";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
@model List<tbl_user>

<div class="container mt-5">
    <h2 class="mb-4">Biografi Düzenleme</h2>
    <form class="form-check">
        <table class="table table-hover table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Ad-Soyad</th>
                    <th>Bölüm</th>
                    <th>Biografi</th>
                    <th>Profil Resmi</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>LinkedIn</th>
                    <th>GitHub</th>
                    <th>Düzenle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserID</td>
                        <td>@user.FullName</td>
                        <td>@user.Title</td>
                        <td>@user.Biography</td>
                        <td><img src="@user.Biography" alt="Profil Resmi" class="img-fluid" style="max-width: 80px; border-radius: 50%;"></td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td><a href="@user.LinkedIn" target="_blank">LinkedIn Profili</a></td>
                        <td><a href="@user.GitHub" target="_blank">GitHub Profili</a></td>
                        <td>
                            <a href="/Admindefault/Bilgidüzenle/@user.UserID" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>

<!-- Script files for Bootstrap and Font Awesome -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
