@{
    ViewBag.Title = "Hakkımda";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}
@model List<tbl_user>

<section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
    @foreach (var hakkımda in Model)
    {
        var nameParts = hakkımda.FullName.Split(' ');
        // ismi ikiye böldük
        var firstName = nameParts[0];
        // ilk kısmı aldık 
        var lastName = string.Join(" ", nameParts.Skip(1)); // Soyadı 
        string mail = hakkımda.Email.ToLower(); 

    <div class="my-auto">
        <h1 class="mb-0">
           @firstName
            <span class="text-primary">@lastName</span>
        </h1>
        <div class="subheading mb-5">
            KTÜ-YBS   ~~ TRABZON/ORTAHİSAR  -  @hakkımda.PhoneNumber   
            <a href="">@mail</a>
        </div>
        <p class="mb-5">@hakkımda.Biography</p>
        <ul class="list-inline list-social-icons mb-0">
           
           
            <li class="list-inline-item">
                <a href="@hakkımda.LinkedIn" target="_blank">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-linkedin fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </li>
            <li class="list-inline-item">
                <a href="@hakkımda.GitHub" target="_blank">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-github fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </li>
        </ul>
    </div>
    }
</section>
